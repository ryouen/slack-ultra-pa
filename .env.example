# Database
DATABASE_URL="postgresql://username:password@localhost:5432/slack_assistant"

# Redis
REDIS_URL="redis://localhost:6379"

# Slack Configuration
SLACK_BOT_TOKEN="xoxb-your-bot-token"
SLACK_BOT_ID="B01234567890"
SLACK_BOT_USER_ID="U01234567890"
SLACK_SIGNING_SECRET="your-signing-secret"
SLACK_SOCKET_MODE="false"
SLACK_APP_TOKEN="xapp-your-app-token"

# Slack OAuth (for multi-workspace support)
SLACK_OAUTH_ENABLED="false"
SLACK_CLIENT_ID="your-client-id"
SLACK_CLIENT_SECRET="your-client-secret"
SLACK_STATE_SECRET="your-state-secret"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4.1-mini"
OPENAI_TEMPERATURE="0.2"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3100/oauth/google/callback"

# Notion OAuth
NOTION_CLIENT_ID="your-notion-client-id"
NOTION_CLIENT_SECRET="your-notion-client-secret"
NOTION_REDIRECT_URI="http://localhost:3100/oauth/notion/callback"

# Server Configuration
PORT="3000"
NODE_ENV="development"
LOG_LEVEL="info"

# Metrics
METRICS_PORT="9091"

# OAuth Token Encryption
OAUTH_ENCRYPTION_KEY="your-encryption-key-change-in-production"