{
  "name": "slack-personal-assistant",
  "version": "1.0.0",
  "description": "Slack-centered personal assistant AI to help you focus on what you should really be doing",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --project tsconfig.development.json",
    "dev": "tsx src/app.ts",
    "dev:watch": "tsx watch --clear-screen=false src/app.ts",
    "dev:simple": "node -r tsx/cjs src/app.ts",
    "stop": "node scripts/stop-app.js",
    "stop:win": "scripts\\stop-app.bat",
    "dev:tunnel": "node scripts/tunnel-keeper.js",
    "dev:tunnel:v3": "node scripts/tunnel-keeper-v3.js",
    "dev:ngrok": "node scripts/ngrok-keeper.js",
    "setup:ngrok": "node scripts/setup-ngrok.js",
    "install:ngrok": "powershell -ExecutionPolicy Bypass -File scripts/install-ngrok-windows.ps1",
    "config:ngrok": "node scripts/configure-ngrok.js",
    "dev:all": "node scripts/start-dev.js",
    "dev:all:ngrok": "node scripts/start-with-ngrok.js",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "slack",
    "personal-assistant",
    "ai",
    "productivity",
    "task-management",
    "calendar-integration"
  ],
  "author": "Kiro Development Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "@slack/bolt": "^3.17.1",
    "@slack/oauth": "^3.0.3",
    "axios": "^1.6.5",
    "bullmq": "^5.1.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "googleapis": "^131.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "openai": "^5.10.2",
    "prom-client": "^15.1.0",
    "rate-limiter-flexible": "^4.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chalk": "^5.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "localtunnel": "^2.0.2",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
